# ===========================================
# SESIMIZ-OL BACKEND ENVIRONMENT VARIABLES
# ===========================================

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/sesimiz_ol_db"
# Alternative for development: "file:./dev.db" (SQLite)

# Server Configuration
PORT=3001
NODE_ENV=development
# NODE_ENV options: development, production, test

# Authentication & Security
JWT_SECRET="your-super-secret-jwt-key-change-in-production-2024"
JWT_REFRESH_SECRET="your-refresh-token-secret-key-2024"
JWT_EXPIRE="15m"
JWT_REFRESH_EXPIRE="7d"

# CORS Configuration
CORS_ALLOWED_ORIGINS="http://localhost:5173,https://sesimiz-ol.firebaseapp.com,https://sesimiz-ol.web.app"
CORS_ALLOWED_ORIGINS_DEVELOPMENT="http://localhost:5173,http://127.0.0.1:5173,http://localhost:4173"
CORS_ALLOWED_ORIGINS_PRODUCTION="https://sesimiz-ol.com,https://www.sesimiz-ol.com,https://sesimiz-ol.firebaseapp.com,https://sesimiz-ol.web.app"
CORS_ALLOWED_ORIGINS_TEST="http://localhost:4173"
CORS_ALLOWED_ORIGIN_REGEX=""
CORS_ALLOW_NULL_ORIGIN=true
CORS_CREDENTIALS=true

# Firebase Configuration (for email services)
FIREBASE_PROJECT_ID="sesimiz-ol"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk-xxxxx@sesimiz-ol.iam.gserviceaccount.com"

# File Upload Configuration
UPLOAD_DIR="uploads"
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES="image/jpeg,image/png,image/webp"

# Email Configuration
EMAIL_FROM="noreply@sesimiz-ol.com"
EMAIL_FROM_NAME="Sesimiz Ol"
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Security Headers
SECURITY_HEADERS_ENABLED=true
SECURITY_HEADERS_REPORT_ONLY=false
SECURITY_CSP_CONNECT_SRC=""
SECURITY_CSP_SCRIPT_SRC=""
SECURITY_CSP_STYLE_SRC=""
SECURITY_CSP_FONT_SRC=""
SECURITY_CSP_IMG_SRC=""

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_GENERAL_WINDOW_MS=900000
RATE_LIMIT_GENERAL_MAX=100
RATE_LIMIT_AUTH_WINDOW_MS=900000
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_UPLOAD_WINDOW_MS=900000
RATE_LIMIT_UPLOAD_MAX=10
TRUST_PROXY=loopback

# Admin Configuration
ADMIN_EMAIL="admin@sesimiz-ol.com"
INITIAL_ADMIN_PASSWORD="change-me-immediately"

# External Services
RECAPTCHA_SECRET_KEY="your-recaptcha-secret-key"
ANALYTICS_ID="your-analytics-id"

# Application URLs
FRONTEND_URL="http://localhost:5173"
BACKEND_URL="http://localhost:3001"
APP_DOMAIN="sesimiz-ol.com"

# Feature Flags
FEATURE_MESSAGING_ENABLED=true
FEATURE_ADMIN_PANEL_ENABLED=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_MIGRATION_MODE=false

# Monitoring & Logging
LOG_LEVEL="info"
SENTRY_DSN="your-sentry-dsn-here"
MONITORING_ENABLED=false

# Development Only
DEBUG_MODE=false
SEED_DATABASE=false