{
  "name": "sesimiz-ol-backend",
  "version": "1.0.0",
  "description": "Backend API for Sesimiz Ol digital storytelling platform",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "dev": "PORT=3002 node --watch src/app.js",
    "start": "node src/app.js",
    "start:production": "npm run prisma:deploy && node src/app.js",
    "seed": "node src/seedDatabase.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "build": "npm run prisma:generate",
    "postinstall": "npm run prisma:generate",
    "test": "NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest --runInBand --detectOpenHandles",
    "test:watch": "NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest --watch --runInBand",
    "test:coverage": "NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest --coverage --runInBand",
    "test:endpoints": "NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest tests/endpoints --runInBand",
    "test:auth": "NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest tests/endpoints/auth.test.js --runInBand",
    "test:stories": "NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest tests/endpoints/stories.test.js --runInBand",
    "test:users": "NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest tests/endpoints/users.test.js --runInBand",
    "feature-flags": "node scripts/featureFlags.js"
  },
  "keywords": [
    "digital-storytelling",
    "anonymous",
    "women-empowerment"
  ],
  "author": "Claude Developer",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "firebase": "^12.2.1",
    "firebase-admin": "^12.5.0",
    "glob": "^11.0.3",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nodemailer": "^6.9.15",
    "pino": "^9.3.2",
    "prisma": "^6.15.0",
    "sharp": "^0.34.3",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "eslint": "^9.34.0",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/seedDatabase.js",
      "!src/**/__tests__/**",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "verbose": true,
    "forceExit": true,
    "clearMocks": true,
    "resetMocks": true,
    "restoreMocks": true
  }
}
